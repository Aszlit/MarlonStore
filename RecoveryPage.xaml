<Window x:Class="Inventory.RecoveryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Recovery" Height="400" Width="400"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Border Background="#FF3C3C3C" CornerRadius="10">
        <Grid>
            <!-- Custom Title Bar -->
            <DockPanel Background="Transparent" Height="40" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <!-- Minimize Button -->
                    <Button Width="30" Height="30" Background="Transparent" BorderThickness="0" 
                        Click="MinimizeApp" ToolTip="Minimize">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <!-- Background Layer -->
                                    <Rectangle x:Name="BackgroundRectangle" Fill="Transparent" RadiusX="5" RadiusY="5"/>
                                    <!-- Minimize Icon -->
                                    <Path Data="M0,1 L10,1" Stroke="White" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!-- MouseOver Trigger -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="BackgroundRectangle" Property="Fill" Value="#FFF1C40F"/>
                                        <!-- Yellow Hover Background -->
                                    </Trigger>
                                    <!-- Pressed Trigger -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="BackgroundRectangle" Property="Fill" Value="#FFD4AC0D"/>
                                        <!-- Darker Yellow Click Background -->
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Close Button -->
                    <Button Width="30" Height="30" Background="Transparent" BorderThickness="0" 
                        Click="CloseApp" ToolTip="Close">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <!-- Background Layer -->
                                    <Rectangle x:Name="BackgroundRectangle" Fill="Transparent" RadiusX="5" RadiusY="5"/>
                                    <!-- X Icon -->
                                    <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="White" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!-- MouseOver Trigger -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="BackgroundRectangle" Property="Fill" Value="#FFCC0000"/>
                                        <!-- Red Hover Background -->
                                    </Trigger>
                                    <!-- Pressed Trigger -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="BackgroundRectangle" Property="Fill" Value="#FF990000"/>
                                        <!-- Darker Red Click Background -->
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </DockPanel>

            <!-- Main Content -->
            <Grid Background="#FF3C3C3C" Margin="0,40,0,0">
                <Label Content="Security Question" HorizontalAlignment="Center" Margin="0,58,0,0" VerticalAlignment="Top" Width="148" FontSize="16" Foreground="White"/>
                <Label Content="What is the name of the Store?" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="250" Foreground="White"/>
                <TextBox x:Name="securitybox" HorizontalAlignment="Center" Margin="0,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="25"/>
                <Label Content="Username" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Width="178" Foreground="White"/>
                <TextBox x:Name="usernamebox" HorizontalAlignment="Center" Margin="0,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="25"/>
                <Button Content="Recover" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Height="32" Width="124" Click="recover" Background="#FF1E90FF" Foreground="White" BorderThickness="0" FontFamily="Bahnschrift SemiBold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Background Layer -->
                                <Rectangle x:Name="BackgroundRectangle" Fill="#FF1E90FF" RadiusX="5" RadiusY="5"/>
                                <!-- Button Content -->
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- MouseOver Trigger -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="BackgroundRectangle" Property="Fill" Value="#FF4682B4"/>
                                    <!-- Lighter Blue Hover Background -->
                                </Trigger>
                                <!-- Pressed Trigger -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="BackgroundRectangle" Property="Fill" Value="#FF4169E1"/>
                                    <!-- Darker Blue Click Background -->
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Label x:Name="passrecoverlabel" Content="Recovered Password Here......" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Width="216" Foreground="White"/>
                <Button HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="returnpage" Background="Transparent" BorderThickness="0" ToolTip="Return">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Background Layer -->
                                <Rectangle x:Name="BackgroundRectangle" Fill="Transparent" RadiusX="5" RadiusY="5"/>
                                <!-- Return Icon -->
                                <Path Data="M10,0 L0,10 L10,20" Stroke="White" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- MouseOver Trigger -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="BackgroundRectangle" Property="Fill" Value="#FF4682B4"/>
                                    <!-- Lighter Blue Hover Background -->
                                </Trigger>
                                <!-- Pressed Trigger -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="BackgroundRectangle" Property="Fill" Value="#FF4169E1"/>
                                    <!-- Darker Blue Click Background -->
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
