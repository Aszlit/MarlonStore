<UserControl x:Class="Inventory.UserControls.PointSale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventory.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1096">
    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0">
            <ItemsControl x:Name="ProductsPanel" Height="550">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="10" Margin="10" Padding="10" Effect="{StaticResource DropShadowEffect}" MouseLeftButtonUp="Card_MouseLeftButtonUp">
                            <StackPanel Width="150">
                                <Image Source="{Binding ProductImage}" Height="100" Width="100" Stretch="UniformToFill" />
                                <TextBlock Text="{Binding ItemName}" HorizontalAlignment="Center" Margin="5,10,5,0" FontWeight="Bold" FontSize="14" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Border Grid.Column="1" Margin="10,114,10,10" Background="#333" Padding="10" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Orders" FontSize="16" FontWeight="Bold" Margin="5" Foreground="White" />
                <ItemsControl x:Name="OrdersPanel">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="{Binding ProductImage}" Height="50" Width="50" Stretch="UniformToFill" Margin="5" />
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" Foreground="White" />
                                    <TextBlock Text="{Binding Quantity}" FontSize="12" Foreground="White" />
                                    <TextBlock Text="{Binding Total, StringFormat=C}" FontSize="12" Foreground="White" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="TotalSubAmount" FontSize="14" Margin="5" Foreground="White" />
                <Button x:Name="ConfirmOrderButton" Content="Confirm Order" Width="150" Height="40" Margin="5" Background="#007ACC" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" Click="ConfirmOrderButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
