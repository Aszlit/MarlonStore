<UserControl x:Class="Inventory.UserControls.Records"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1096">
    <UserControl.Resources>
        <!-- Centered text style -->
        <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- ToggleButton style -->
        <Style x:Key="ButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#2A2E37"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#2A2E37"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#1A1E27"/>
                                <Setter Property="BorderBrush" Value="#1A1E27"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1A1E27"/>
                                <Setter Property="BorderBrush" Value="#1A1E27"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ToggleButtons to select data view -->
        <StackPanel Orientation="Horizontal" Margin="10,40,10,698" Grid.Row="0" Grid.RowSpan="2">
            <ToggleButton x:Name="InventoryButton" Content="Inventory" Click="InventoryButton_Click" Style="{StaticResource ButtonStyle}" Width="121" Height="30" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked"/>
            <ToggleButton x:Name="PurchasesButton" Content="Purchases" Click="PurchasesButton_Click" Style="{StaticResource ButtonStyle}" Width="117" Height="31" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked"/>
        </StackPanel>

        <!-- DataGrid to display records -->
        <DataGrid x:Name="RecordsDataGrid" 
                  CanUserAddRows="False" 
                  CanUserResizeColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column" 
                  GridLinesVisibility="None"
                  Margin="10,84,10,76"
                  RowHeight="50"
                  ColumnHeaderHeight="50"
                  BorderThickness="1"
                  BorderBrush="#DDDDDD" 
                  Background="#F7F7F7"
                  AutoGenerateColumns="False" 
                  Grid.Row="1">
            <!-- Define Columns -->
            <DataGrid.Columns>
                <!-- Image Column -->
                <DataGridTemplateColumn Header="Image" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ProductImage}" Width="50" Height="50" Stretch="UniformToFill" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Item Name Column -->
                <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*" 
                                    ElementStyle="{StaticResource CenteredTextStyle}"/>

                <!-- Quantity Column -->
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100" 
                                    ElementStyle="{StaticResource CenteredTextStyle}"/>

                <!-- Price Column -->
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100" 
                                    ElementStyle="{StaticResource CenteredTextStyle}"/>

                <!-- Value Column -->
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="100" 
                                    ElementStyle="{StaticResource CenteredTextStyle}"/>
            </DataGrid.Columns>

            <!-- Style Definitions -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Background" Value="#2A2E37"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="BorderBrush" Value="#EAEAEA"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>
    </Grid>
</UserControl>
