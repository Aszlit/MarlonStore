<UserControl x:Class="Inventory.OrderDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <StackPanel Margin="10">
            <Image x:Name="ProductImage" Height="100" Width="100" Stretch="UniformToFill" />
            <TextBlock x:Name="ProductName" FontSize="16" FontWeight="Bold" Margin="5" />
            <TextBlock x:Name="ProductQuantity" FontSize="14" Margin="5" />
            <TextBlock x:Name="ProductPrice" FontSize="14" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
